<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.akexorcist.bluetoothspp">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="ru.Main"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="ru.SimpleActivity"
                android:label="@string/app_name"/>
        <activity
                android:name="ru.ListenerActivity"
                android:label="@string/title_activity_listener">
        </activity>
        <activity
                android:name="ru.AutoConnectActivity"
                android:label="@string/title_activity_auto_connect">
        </activity>
        <activity
                android:name="ru.DeviceListActivity"
                android:label="@string/title_activity_device_list">
        </activity>
        <activity
                android:name="ru.TerminalActivity"
                android:label="@string/title_activity_terminal">
        </activity>
        <activity
                android:name="ru.TerminalActivityFiltered"
                android:label="@string/title_activity_terminal_filtered">
        </activity>
        <activity
                android:name="ru.FormTrackerActivity"
                android:label="@string/title_activity_form_tracker">
        </activity>
        <activity
                android:name="ru.FormSensorActivity"
                android:label="@string/title_activity_form_sensor">
        </activity>

        <activity android:name="app.akexorcist.bluetotohspp.library.DeviceList"/>
        <activity android:name="ru.DeviceListFiltered"/>
    </application>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

</manifest>
